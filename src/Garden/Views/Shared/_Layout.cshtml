    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>


    <link href="/css/styles.css" rel="stylesheet" />

</head>
<body id="bodyDiv">
    <div class="col-lg-12"></div>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
          
            <div class="collapse navbar-collapse" id="">
                <ul class="nav navbar-nav">
                    <li class=""><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class=""><a asp-action="YourVeg" asp-controller="List">Your Vegtables</a></li>
                    <li class=""><a asp-action="Design" asp-controller="Design">Design a Bed</a></li>
                    
                </ul>
                <ul class="nav navbar-nav">
                    <li class="nav nav-tabs">
                        <a class="dropdown-toggle alert-success" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Add Forms<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class=""><a asp-action="Vegtable" asp-controller="Add">Vegtable</a></li>
                            <li class=""><a asp-action="Variety" asp-controller="Add">Variety</a></li>
                        </ul>
                    </li>
                </ul>   
                    @*<form class="navbar-form navbar-right" asp-action="Search" asp-controller="Home" method="post">
                        <div class="form-group">
                            <a><input type="text" class="form-control" placeholder="Search"></a> 
                        </div>
                        <a><input type="submit" class="btn btn-default" value="Submit"></a> 
                    </form>*@
                
                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-action="Login" asp-controller="Login">Login</a></li>
                    <li><a asp-action="Logout" asp-controller="Login">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>


    <div>
        @RenderBody()
    </div>


    <footer class="footer container-fluid text-center navbar-fixed-bottom">
        <div class="container ">
            <span class="text-muted">Thank you for using my Garden Planner....2017</span>
            <span><a href="http://www.flaticon.com/">Icons designed by Freepik from Flaticon</a></span>
        </div>
    </footer>
</body>
</html>
