@model User
@{ 
    Layout = "_Layout";
}



<div class="row">
    <div class="col-lg-5"></div>
    <div class="col-lg-2">
        @if (User.Identity.Name == null)
        {
            <div class="text-center" id="greeting">Welcome Guest!</div>
            <br />
        }
        else
        { 
            <div class="text-center" id="greeting">Welcome @User.Identity.Name!</div>
            <br />
        }
    </div>
    <div class="col-lg-5"></div>
</div>
<div class="container">
    <div class="jumbotron text-center">
        <p><h2 id="jumTitle">Garden Bed Planner</h2></p>
    </div>
</div>

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6" id="mainDiv">
        <p class="text-center">
            Welcome to a revolutionary new garden planner. With this tool you can add each variety of vegtable you 
            plant, record its performance as well as so much more.
        </p>
    </div>
    <div class="col-lg-3"></div>
</div>